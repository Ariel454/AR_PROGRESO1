            <th>
                @Html.DisplayNameFor(model => model.arNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.arCorreo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.arCodigoPostal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.arEstudianteNuevo)
